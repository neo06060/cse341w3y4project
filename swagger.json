{
  "swagger": "2.0",
  "info": {
    "title": "Book & Reviews API",
    "description": "API for managing books and reviews",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "tags": [
    { "name": "Health", "description": "API health check" },
    { "name": "Books", "description": "All book related endpoints" },
    { "name": "Reviews", "description": "All review related endpoints" }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Health"],
        "summary": "API health check",
        "description": "Returns a simple text to indicate the API is running",
        "responses": {
          "200": {
            "description": "OK",
            "schema": { "type": "string", "example": "Book API is running" }
          }
        }
      }
    },
    "/books": {
      "get": {
        "tags": ["Books"],
        "summary": "Get all books",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Books"],
        "summary": "Create a new book",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Book" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "summary": "Get a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Books"],
        "summary": "Update a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "required": true, "schema": { "$ref": "#/definitions/Book" } }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" }
        }
      },
      "delete": {
        "tags": ["Books"],
        "summary": "Delete a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      }
    },
    "/reviews": {
      "get": {
        "tags": ["Reviews"],
        "summary": "Get all reviews",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Reviews"],
        "summary": "Create a new review",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Review" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" }
        }
      }
    },
    "/reviews/{id}": {
      "get": {
        "tags": ["Reviews"],
        "summary": "Get a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Reviews"],
        "summary": "Update a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "required": true, "schema": { "$ref": "#/definitions/Review" } }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" }
        }
      },
      "delete": {
        "tags": ["Reviews"],
        "summary": "Delete a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "isbn": { "type": "string" },
        "publisher": { "type": "string" },
        "publishedDate": { "type": "string", "format": "date" },
        "pages": { "type": "integer" },
        "genre": { "type": "string" },
        "price": { "type": "number" }
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "book": { "type": "string" },
        "reviewer": { "type": "string" },
        "rating": { "type": "integer" },
        "comment": { "type": "string" }
      }
    }
  }
}
