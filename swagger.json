{
  "swagger": "2.0",
  "info": {
    "title": "Book & Reviews API",
    "description": "API for managing books and reviews",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "schemes": ["http"],
  "basePath": "/api",
  "tags": [
    { "name": "Books", "description": "All book related endpoints" },
    { "name": "Reviews", "description": "All review related endpoints" },
    { "name": "Auth", "description": "User authentication endpoints" }
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Paste your JWT token here. Swagger will add 'Bearer ' automatically."
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Missing fields or username already exists" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login a user and return JWT",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful",
            "schema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" }
              }
            }
          },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/books": {
      "get": {
        "tags": ["Books"],
        "summary": "Get all books",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "tags": ["Books"],
        "summary": "Create a new book",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Book" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "summary": "Get a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Books"],
        "summary": "Update a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Book" }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" }
        },
        "security": [{ "bearerAuth": [] }]
      },
      "delete": {
        "tags": ["Books"],
        "summary": "Delete a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/reviews": {
      "get": {
        "tags": ["Reviews"],
        "summary": "Get all reviews",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "tags": ["Reviews"],
        "summary": "Create a new review",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Review" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/reviews/{id}": {
      "get": {
        "tags": ["Reviews"],
        "summary": "Get a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Reviews"],
        "summary": "Update a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Review" }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" }
        },
        "security": [{ "bearerAuth": [] }]
      },
      "delete": {
        "tags": ["Reviews"],
        "summary": "Delete a review by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "isbn": { "type": "string" },
        "publisher": { "type": "string" },
        "publishedDate": { "type": "string", "format": "date" },
        "pages": { "type": "integer" },
        "genre": { "type": "string" },
        "price": { "type": "number" }
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "book": { "type": "string" },
        "reviewer": { "type": "string" },
        "rating": { "type": "integer" },
        "comment": { "type": "string" }
      }
    }
  }
}
